generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Trade {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  symbol         String
  side           String
  volume         Float
  status         String
  profit         Float
  openedAt       DateTime @default(now())
  closedAt       DateTime?
  stopLossPips   Int?
  takeProfitPips Int?
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
